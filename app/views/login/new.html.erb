<h1>Login#new</h1>

<%= form_tag login_path do %>
  <p>
    <%= label_tag :email, t('form.labels.user.email') %>
    <%= email_field_tag :email %>
  </p>

  <p>
    <%= label_tag :password, t('form.labels.user.password') %>
    <%= password_field_tag :password %>
  </p>

  <p>
    <%= submit_tag t('form.buttons.login') %>
  </p>
<% end %>
