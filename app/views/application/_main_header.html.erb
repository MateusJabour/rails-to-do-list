<header class="main-header">
  <%= link_to home_path, class: 'main-header-logo' do %>
    <%= image_tag 'logo.png'%>
  <% end %>

  <h1 class="main-header-title">
    <%= page_title %>
  </h1>

  <nav class="main-nav">
    <ul>

      <% if logged_in? %>
      <li>
        <%= gravatar current_user.email, current_user.name %>
      </li>

      <li>
        <%= button_to t('form.buttons.logout'), logout_path %>  
      </li>
      <% else %>
      <li>
        <%= link_to t('menu.signup'), signup_path %>
      </li>

      <li>
        <%= link_to t('menu.login'), login_path %>
      </li>
      <% end %>
    </ul>
  </nav>
</header>
